                <p>
                    <label for="email">E-mail</label>
                    <input type="text" name="name" id="email">
                </p>
                <p>
                    <label for="mensaje">Mensaje</label>
                    <textarea name="name" id="mensaje"></textarea>
                </p>
                <p>
                    <input type="submit" value="Enviar">
                </p>
            </form>
        </div>
    </div>
